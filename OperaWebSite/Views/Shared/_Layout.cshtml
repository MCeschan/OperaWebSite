<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/main.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="header">
        <h1>Operas Web Site</h1>
    </div>
    <div id="menu">
        @Html.ActionLink("Home", "Index", "Home")
        @Html.ActionLink("Opera", "Index", "Opera")
    </div>
    <div id="sidebar">
         @if (IsSectionDefined("SideBar"))
        {
            @RenderSection("SideBar")
        }
        else
        {
            <h2>Zona Sidebar Fija</h2>
        }

    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
        <p>info@Opera.com</p>

    </div>
</body>
</html>
